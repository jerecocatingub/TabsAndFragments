<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/opCV"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="176dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                app:srcCompat="@drawable/map"
                android:id="@+id/imageView"
                android:background="@color/colorPrimary"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtMeterNumber"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toTopOf="@+id/txtContactPerson"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/clipboard"
                android:id="@+id/imgClipboard"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="Work Order #:"
                android:layout_width="0dp"
                android:id="@+id/txtWorkNumber"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="@+id/imgClipboard"
                android:layout_marginTop="8dp" />

            <TextView
                android:text="Account Name: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAccntName"
                android:textSize="14sp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/txtWorkNumber"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp" />

            <TextView
                android:text="Account No: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtAccntNumber"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtAccntName"
                android:textSize="14sp"
                android:textColor="#686868" />

            <TextView
                android:text="Work Order Type: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtWorkType"
                app:layout_constraintTop_toBottomOf="@+id/txtAccntNumber"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:textColor="#686868" />

            <TextView
                android:text="Meter Serial No: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtMeterNumber"
                app:layout_constraintTop_toBottomOf="@+id/txtWorkType"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="14sp" />

            <TextView
                android:text="Address: "
                android:layout_width="0dp"
                android:layout_height="19dp"
                android:id="@+id/txtAddress"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/txtMeterNumber"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard"
                android:layout_marginLeft="16dp"
                app:layout_constraintRight_toLeftOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:text="Contact Person: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtContactPerson"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.58"
                app:layout_constraintTop_toBottomOf="@+id/txtAddress"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard" />

            <TextView
                android:text="Contact No: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtContactNum"
                app:layout_constraintTop_toBottomOf="@+id/txtContactPerson"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard" />

            <TextView
                android:text="Special Instructions: "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtInstructions"
                app:layout_constraintLeft_toRightOf="@+id/imgClipboard"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="#696969"
                app:layout_constraintTop_toBottomOf="@+id/txtContactNum"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/clock"
                android:id="@+id/imgClock"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtInstructions"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:text="5/30/2016  11:23:45 AM"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:id="@+id/txtDate"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgClock"
                android:layout_marginLeft="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="88dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtInstructions"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/hourglass"
                android:id="@+id/imgHourglass"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imgClock"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintVertical_bias="0.04000002" />

            <TextView
                android:text="10 Hrs. Remaining"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/txtTime"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgHourglass"
                android:layout_marginLeft="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDate"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="@drawable/bookmark"
                android:id="@+id/imgBookmark"
                app:layout_constraintTop_toBottomOf="@+id/imgHourglass"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintVertical_bias="0.71000004" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnStatus"
                android:textStyle="normal|bold"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/imgBookmark"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTime"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:gravity="right|center_vertical|center_horizontal"
                app:layout_constraintVertical_bias="0.0"
                android:paddingLeft="17dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>